{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist/js", // put compiled code into dist/js
      "rootDir": "src", // informs TS to compile every .ts file located in the src folder
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"], // tells the compiler to include files that are in the src directory and sub-directory.
    "exclude": ["src/types/*.ts", "node_modules", ".vscode"] // will exclude the files or folders passed in the array during compile-time.
  }